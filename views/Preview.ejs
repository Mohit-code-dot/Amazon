<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <header>
      <nav>
        <div class="nav01">
          <img src="https://pngimg.com/uploads/amazon/amazon_PNG11.png" />
        </div>
        <div class="nav02">
          <div class="nav02img">
            <img src="../Img/location.png" alt="" srcset="" />
          </div>
          <div class="nav02text">
            <span>Deliver To</span><br />
            <span>India</span>
          </div>
        </div>
        <div class="nav03">
          <button>
            All
            <img src="../public/Img/downward-arrow.png" alt="" srcset="" />
          </button>
          <input type="text" placeholder="Search Amazon" />
          <button><img src="../Img/search.png" alt="" srcset="" /></button>
        </div>
        <div class="nav04">
          <img src="../Img/Flag_of_the_United_States.png" alt="" srcset="" />
          EN
        </div>
        <div class="nav05">
          <span>Account & Lists</span>
        </div>
        <div class="nav06">
          <span
            >Returns <br />
            & Order</span
          >
        </div>
        <div class="nav07">Cart</div>
      </nav>
    </header>
    <div class="subHeader">
      <ul>
        <li>All</li>
        <li>Today's Deals</li>
        <li>Customer Service</li>
        <li>Dhruv's Amazon.com</li>
        <li>Buy Again</li>
        <li>Sell</li>
        <li>Gift Cards</li>
        <li>Browsing History</li>
        <li>Registry</li>
      </ul>
    </div>

    <main>
      <div class="mainImg">
        <div class="ListingImage">
          <% textModel.imgPaths.forEach((value)=> {%>
          <img src="<%= value %>" alt="" srcset="" />
          <% });%>
        </div>
        <div class="mainBigImage image-container" id="image-container">
          <img src="<%= textModel.imgPaths[0] %>" alt="" srcset="" />
          <div id="mouse-overlay"></div>
          <div id="overlay"></div>
        </div>
      </div>
      <div class="mainContent">
        <div class="Content">
          <div class="AmazonHeading">
            <h1 id="AmazonTitle"><%= textModel.title %></h1>
            <a href="#">Visit the Atlantic Naturals Store</a>
            <div class="ratingDiv">
              <div class="stars">
                <div class="starNumber">4</div>
                <div class="starImage">
                  <img src="../Img/rating.png" alt="" srcset="" />
                  <img src="../Img/down.png" alt="" srcset="" />
                </div>
              </div>
              <div class="rating">
                <a href="#">851 ratings</a>
              </div>
              <span>|</span>
              <div class="searchPage">
                <a href="#">Search this page</a>
              </div>
            </div>
            <hr width="90%" />
            <h3 id="Price"></h3>
          </div>
          <div class="brandDetail">
            <div>
              <h2>
                This item cannot be shipped to your selected delivery location.
                Please choose a different delivery location.
              </h2>
            </div>
            <div>
              <table>
                <tr>
                  <td><b>Brand</b></td>
                  <td id="detail01"><%= textModel.brandName %></td>
                </tr>
                <tr>
                  <td><b>Item Form</b></td>
                  <td id="detail02"><%= textModel.itemForm %></td>
                </tr>
                <tr>
                  <td><b>Manufacturer</b></td>
                  <td id="detail03"><%= textModel.manufacture %></td>
                </tr>
                <tr>
                  <td><b>Item Package Quantity</b></td>
                  <td id="detail04"><%= textModel.quantity %></td>
                </tr>
                <tr>
                  <td><b>Package Information</b></td>
                  <td id="detail05"><%= textModel.PackageInfo %></td>
                </tr>
              </table>
            </div>
            <hr width="90%" />
          </div>
          <div id="BulletPoints">
            <ul>
              <h2>About this item</h2>
              <li id="AmazonSubTitle01"><%= textModel.bulletPoint01 %></li>
              <li id="AmazonSubTitle02"><%= textModel.bulletPoint02 %></li>
              <li id="AmazonSubTitle03"><%= textModel.bulletPoint03 %></li>
              <li id="AmazonSubTitle04"><%= textModel.bulletPoint04 %></li>
              <li id="AmazonSubTitle05"><%= textModel.bulletPoint05 %></li>
              <li id="AmazonSubTitle06"><%= textModel.bulletPoint06 %></li>
            </ul>
          </div>
        </div>
        <div
          id="div"
          style="
            width: 40%;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            cursor: pointer;
            transition: all 0.5s;
          "
        >
          <h2
            style="
              width: 60%;
              font-size: 1rem;
              padding: 1rem;
              margin: 50px 10px 10px 10px;
              cursor: pointer;
              background: #000;
              color: #fff;
              border: none;
              border-radius: 8px;
              display: flex;
              justify-content: center;
              align-items: center;
            "
          >
            Step 2
          </h2>
        </div>
      </div>
    </main>
    <div class="AplusImage">
      <% textModel.APlusImgPaths.forEach((value)=> {%>
      <img src="<%= value %>" alt="" srcset="" />
      <% });%>
    </div>

    <div id="databaseIdPopUp">
      <span>&times;</span>
      <h1 style="text-align: center;">Copy below Text To Paste On Next Step <br><%= textId %></h1>
      <a
        target="_blank"
        style="
          width: 25%;
          font-size: 1rem;
          padding: 1rem;
          margin: 50px 10px 10px 10px;
          cursor: pointer;
          background: #000;
          color: #fff;
          border: none;
          border-radius: 8px;
          text-decoration: none;
          display: flex;
          justify-content: center;
          align-items: center;
        "
        href="https://happy-kelcy-workinxdigtial-500448f1.koyeb.app/"
        >Step 3</a
      >
    </div>

    <script>
      const div = document.getElementById("div");
      const divImg = document.querySelector("#div h2");
      const databaseIdPopUp = document.getElementById("databaseIdPopUp");
      const databaseIdPopUpSpan = document.querySelector(
        "#databaseIdPopUp span"
      );

      div.addEventListener("click", () => {
        divImg.style.display = "none";
        databaseIdPopUp.style.display = "flex";
      });

      databaseIdPopUpSpan.addEventListener("click", () => {
        divImg.style.display = "flex";
        databaseIdPopUp.style.display = "none";
      });
    </script>
  </body>
</html>
